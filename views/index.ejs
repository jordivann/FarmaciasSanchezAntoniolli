<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>FSA - PowerBi</title>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <!-- Custom styles -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">  
    
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">

    <!-- FontAwesome CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">


    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

    <style>
        body{
            background-color: #c4c4c4e0;
        }
        .container{
            display:flex;
            justify-content: center;
            align-items:center;
            /* height:50vh; */
            width:100%;
            margin-top: 30px;
        }
        .table-container {
            max-width: 1000px;
            margin: 0 auto;
            border-radius: 10px;
        }
        .table{
            background-color: #f1f1f1;
            border-radius: 10px;
        }
        .admin-container{
            display:flex;
            align-items:center;
            justify-content: space-around;
            width: 300px;
        }
        .contenedorDerecho{
            display:flex;
            justify-content:flex-end;
            margin-top: 10px;
            margin-bottom:10px;
        }
        .modal-fullscreen {
        width: 100%;
        height: 100%;
        margin: 5px;
        padding: 0;
        max-width: 100%;
        }

        .modal-fullscreen .modal-content {
            height: 100vh;
            border: 0;
            border-radius: 0;
        }

        .modal-fullscreen .modal-body {
            height: calc(100vh - 56px - 56px); /* Descuenta la altura del header y del footer */
            padding: 0;
        }
        .modal-header{
            max-height:2px !important   ;
            background-color: rgba(0, 124, 152,.7);
            display:flex;
            align-items:center;
            justify-content:flex-end;
        }
        .modal-footer{
            max-height: 10px;
            display:flex;
            align-items:center;
            justify-content:flex-end;
        }


        #powerBIFrame {
            width: 100%;
            height: 100%;
        }
    </style>
</head>
<body>
    <%- include('partials/banner', { showBackButton: false, loggedIn: true }) %>
    
    <%- include('partials/nav')%>
    <div class="container">
        
        <div class="table-container">
            <div class="titulo">
                <h1 class="text-center mb-4">Listado de PowerBi FSA</h1>
            </div>
            <% if (isAdmin) { %>
                <div class="contenedorDerecho">
                    <div class="admin-container">
                        <a href="/new" class="btn btn-sm btn-primary"><i class="fas fa-bars"></i>Agregar nuevo</a>
                        <a href="/admin_roles" class="btn btn-sm btn-primary">Roles</a>
                        <a href="/users" class="btn btn-sm btn-primary">Editar Usuario</a>
                    </div>
                </div>
            <% } %>
            <table class="table table-striped table-bordered">
                <thead class="thead-dark">
                    <tr>
                        <th>Categoría</th>
                        <th>Nombre</th>
                        <th>Descripción</th>
                        <th>Link</th>
                        <th>Vigencia</th>
                        <% if (isAdmin) { %>
                            <th>Acciones</th>
                        <% } %>
                    </tr>
                </thead>
                <tbody>
                    <% data.forEach(item => { %>
                        <tr>
                            <td><%= item.categoria %></td>
                            <td><%= item.nombre %></td>
                            <td><%= item.descripcion %></td>
                            <td><a href="#" class="btn btn-sm btn-info open-powerbi-modal" data-link="<%= item.link %>">Enlace</a></td>
                            <td><%= item.vigencia %></td>
                            <% if (isAdmin) { %>
                                <td>
                                    <a href="/edit/<%= item.id %>" class="btn btn-sm btn-primary">Editar</a>
                                </td>
                            <% } %>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        </div>
    </div>
    <!-- Modal -->
    <div class="modal fade" id="powerBIModal" tabindex="-1" role="dialog" aria-labelledby="powerBIModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-fullscreen" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div id="notAvailableMessage" style="display:none; color: red; text-align: center;">
                        <%- include('partials/banner', { showBackButton: false, loggedIn: false }) %>
                        Informe no disponible
                        <!-- El informe que está intentando ver no está disponible aún. Para más información comunicarse con el Bicho Barber, e intentaremos resolver sus dudas. -->
                    </div>
                    <iframe id="powerBIFrame" width="100%" height="100%" frameborder="0" allowFullScreen="true" style="display:none;"></iframe>
                </div>
                <div class="modal-footer">
                    <!-- <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button> -->
                </div>
            </div>
        </div>
    </div>

    <script>
        $(document).ready(function() {
            $('.open-powerbi-modal').on('click', function(e) {
                e.preventDefault();
                var link = $(this).data('link');
                if (link === "Link") {
                    $('#notAvailableMessage').show();
                    $('#powerBIFrame').hide();
                } else {
                    $('#notAvailableMessage').hide();
                    $('#powerBIFrame').attr('src', link).show();
                }
                $('#powerBIModal').modal('show');
            });
        });
    </script>

</body>
</html>
